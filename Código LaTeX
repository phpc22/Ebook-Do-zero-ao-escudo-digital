%----------------------------------------------------------------------------------------
%	Glossary
%----------------------------------------------------------------------------------------
\newglossaryentry{ataque-cibernetico}{
    name={Ataque Cibernético},
    description={Um ataque realizado por indivíduos ou grupos que tentam acessar, danificar ou roubar dados de sistemas computacionais, redes ou dispositivos}
}
\newglossaryentry{phishing}{
    name={Phishing},
    description={Técnica de fraude cibernética onde os atacantes se passam por fontes confiáveis para enganar as vítimas e obter informações sensíveis, como senhas ou números de cartão de crédito}
}
\newglossaryentry{autenticacao-dois-fatores}{
    name={Autenticação de Dois Fatores (2FA)},
    description={Processo de segurança que exige duas formas diferentes de verificação antes de permitir o acesso a uma conta, geralmente uma senha e um código enviado ao celular ou gerado por um aplicativo}
}
\newglossaryentry{gerenciador-senhas}{
    name={Gerenciador de Senhas},
    description={Software usado para criar, armazenar e organizar senhas de maneira segura, permitindo o uso de senhas fortes e únicas para diferentes serviços}
}
\newglossaryentry{criptografia}{
    name={Criptografia},
    description={Técnica de segurança que transforma dados em um formato ilegível sem uma chave de acesso, garantindo que informações sensíveis sejam protegidas durante o armazenamento e transmissão}
}
\newglossaryentry{antivirus}{
    name={Antivírus},
    description={Software projetado para detectar, bloquear e remover malwares (programas maliciosos) que possam prejudicar o funcionamento de um dispositivo ou roubar dados}
}
\newglossaryentry{ransomware}{
    name={Ransomware},
    description={Tipo de malware que criptografa os arquivos de um usuário ou empresa e exige um resgate para liberar o acesso a esses arquivos}
}
\newglossaryentry{engenharia-social}{
    name={Engenharia Social},
    description={Técnica de manipulação psicológica usada por cibercriminosos para enganar pessoas e levá-las a revelar informações pessoais ou executar ações que comprometam a segurança}
}
\newglossaryentry{backup}{
    name={Backup},
    description={Cópia de segurança de dados importantes armazenados em dispositivos físicos ou na nuvem, que serve para garantir a recuperação desses dados em caso de perda, falha de sistema ou ataque cibernético}
}
\newglossaryentry{firewall}{
    name={Firewall},
    description={Sistema de segurança de rede que monitora e controla o tráfego de entrada e saída em uma rede, bloqueando acessos não autorizados}
}
\newglossaryentry{vpn}{
    name={VPN (Virtual Private Network)},
    description={Rede privada virtual que permite a navegação segura pela internet, criptografando os dados e mascarando o endereço IP do usuário}
}
\newglossaryentry{engenharia-malware}{
    name={Engenharia de Malware},
    description={Processo de desenvolvimento e modificação de malwares, muitas vezes com o objetivo de explorar vulnerabilidades em sistemas e redes}
}
\newglossaryentry{simulacao-phishing}{
    name={Simulação de Phishing},
    description={Teste de segurança onde as empresas enviam e-mails ou mensagens simuladas para seus funcionários com o objetivo de detectar possíveis falhas na conscientização sobre segurança}
}
\newglossaryentry{ids}{
    name={Sistema de Detecção de Intrusão (IDS)},
    description={Sistema usado para monitorar e analisar o tráfego da rede em busca de atividades suspeitas ou invasões, alertando os administradores sobre possíveis ataques}
}
\newglossaryentry{ips}{
    name={Sistema de Prevenção de Intrusão (IPS)},
    description={Similar ao IDS, mas com a função adicional de bloquear automaticamente as ameaças identificadas, impedindo a execução de atividades maliciosas}
}
\newglossaryentry{politica-acesso}{
    name={Política de Controle de Acesso},
    description={Conjunto de regras e práticas que definem quais usuários ou sistemas têm permissão para acessar determinados recursos dentro de uma rede ou sistema}
}
\newglossaryentry{mfa}{
    name={Autenticação Multifatorial (MFA)},
    description={Processo de segurança onde são exigidas mais de duas formas de verificação (algo que você sabe, algo que você tem e algo que você é) para garantir que a pessoa que está tentando acessar seja realmente a autorizada}
}
\newglossaryentry{algoritmos-criptografia}{
    name={Algoritmos de Criptografia (AES, RSA)},
    description={Métodos matemáticos usados para criptografar dados. AES (Advanced Encryption Standard) é um algoritmo de chave simétrica, enquanto o RSA (Rivest–Shamir–Adleman) é um algoritmo de chave pública}
}
\newglossaryentry{rbac}{
    name={Controle de Acesso Baseado em Funções (RBAC)},
    description={Estratégia de segurança em que o acesso a recursos dentro de um sistema é controlado com base nas funções ou responsabilidades de um usuário dentro da organização}
}
\newglossaryentry{patch}{
    name={Patch de Segurança},
    description={Atualização de software que corrige falhas de segurança em sistemas operacionais, aplicativos e outros programas, evitando que essas falhas sejam exploradas por atacantes}
}
\newglossaryentry{ddos}{
    name={DDoS (Distributed Denial of Service)},
    description={Ataque em que múltiplos sistemas são usados para sobrecarregar um servidor ou rede, tornando-a inacessível para usuários legítimos}
}
\newglossaryentry{malware}{
    name={Malware},
    description={Software malicioso criado para danificar, explorar ou roubar dados de um sistema. Inclui vírus, worms, trojans, ransomware e outros}
}
\newglossaryentry{monitoramento-continuo}{
    name={Sistemas de Monitoramento Contínuo},
    description={Ferramentas e práticas que permitem monitorar em tempo real os sistemas e redes de uma organização, buscando identificar anomalias ou possíveis falhas de segurança}
}
\newglossaryentry{criptografia-ponta-a-ponta}{
    name={Criptografia de Ponta-a-Ponta},
    description={Tipo de criptografia onde as mensagens são criptografadas no dispositivo do remetente e descriptografadas no dispositivo do destinatário, garantindo que ninguém, nem mesmo o provedor de serviço, possa acessar o conteúdo}
}
\newglossaryentry{vulnerabilidade-software}{
    name={Vulnerabilidade de Software},
    description={Defeito ou falha em um sistema ou aplicativo que pode ser explorado por hackers para realizar ataques, como a execução de código malicioso}
}
\newglossaryentry{politica-seguranca}{
    name={Política de Segurança da Informação},
    description={Conjunto de normas e procedimentos estabelecidos por uma organização para proteger suas informações contra acessos não autorizados, corrupção ou perda}
}
\newglossaryentry{analise-vulnerabilidades}{
    name={Análise de Vulnerabilidades},
    description={Processo de identificar, classificar e corrigir falhas de segurança em sistemas, redes ou aplicativos}
}
\newglossaryentry{gestao-chaves}{
    name={Gestão de Chaves Criptográficas},
    description={Conjunto de práticas e ferramentas usadas para gerenciar as chaves de criptografia, incluindo sua criação, armazenamento, uso e destruição}
}
\newglossaryentry{pen-test}{
    name={Simulações de Invasões (Pen Test)},
    description={Testes de segurança realizados por profissionais especializados (chamados de "penetration testers") que tentam invadir um sistema ou rede de forma controlada, para identificar e corrigir vulnerabilidades antes que cibercriminosos possam explorá-las}
}
\newglossaryentry{reacao-incidentes}{
    name={Respostas a Incidentes},
    description={Ações tomadas por uma equipe de segurança para responder a um ataque cibernético, limitar danos, restaurar sistemas afetados e evitar futuros incidentes}
}
\newglossaryentry{criptografia-padrao}{
    name={Criptografia Padrão de Mercado},
    description={Uso de algoritmos de criptografia amplamente reconhecidos e validados como seguros, como AES, RSA e SHA, para proteger dados durante sua transmissão ou armazenamento}
}


